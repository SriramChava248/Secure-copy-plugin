{
  "manifest_version": 3,
  "name": "Secure Clipboard",
  "version": "1.0.0",
  "description": "Secure clipboard manager with cloud sync",
  
  "permissions": [
    "storage",
    "clipboardRead",
    "clipboardWrite",
    "activeTab",
    "windows",
    "tabs"
  ],
  
  "host_permissions": [
    "http://localhost:8080/*",
    "https://*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "action": {
    "default_popup": "popup.html"
  },
  
  "commands": {
    "open-clipboard": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "mac": "Command+Shift+V"
      },
      "description": "Open Secure Clipboard"
    }
  }
}

